{
  "name": "nuxt-app",
  "version": "1.54.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .js,.ts,.vue --ignore-path .gitignore . --fix"
  },
  "dependencies": {
    "@nuxt/eslint": "1.3.0",
    "@nuxt/icon": "1.11.0",
    "@nuxt/image": "1.10.0",
    "@nuxt/test-utils": "3.17.2",
    "@pinia/nuxt": "0.10.1",
    "axios": "^1.9.0",
    "dragon-editor": "^3.4.5",
    "eslint": "^9.0.0",
    "nuxt": "^3.16.2",
    "pinia": "^3.0.1",
    "pinia-plugin-persistedstate": "^4.2.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vuetify-nuxt-module": "0.18.5"
  },
  "devDependencies": {
    "@lordcrainer/adaptcv-shared-types": "^1.3.5",
    "@nuxtjs/i18n": "^9.4.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "bracketSameLine": true,
    "endOfLine": "auto",
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
      {
        "files": "CHANGELOG.md",
        "options": {
          "tabWidth": 2,
          "parser": "markdown"
        }
      },
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2,
          "parser": "json-stringify"
        }
      }
    ]
  }
}
